        <param>
            <id>feed_id</id>
            <lang>
                <de>
                    <title>feed_id</title>
                    <description>Wählen Sie einen Feed aus</description>
                </de>
                <en>
                    <title>feed_id</title>
                    <description>Select a feed</description>
                </en>
