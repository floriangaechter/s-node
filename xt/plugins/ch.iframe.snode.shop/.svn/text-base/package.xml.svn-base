        <lang>
            <de>
                <title>Kopfzeile darstellen</title>
                <description>Soll die Kopfzeile dargestellt werden</description>
            </de>
            <en>
                <title>show headings</title>
                <description>Do you want to display the headings</description>
            </en>
        </lang>
        <values>yes,no</values>
        <valuetype>normal</valuetype>
        </param>
        <param>
            <id>field_id</id>
            <lang>
                <de>
                    <title>Weitere Informationen</title>
                    <description>Wählen Sie ein Eigenschaften Feld aus dessen Inhalt zusätzlich dargestellt werden soll</description>
                </de>
                <en>
                    <title>Additional Informations</title>
                    <description>Select a property field you want to display</description>
                </en>
            </lang>
            <values>[SELECT id,fieldname FROM {PREFIX}catalog_articles_fieldnames WHERE lang =\'{LANG}\' ORDER BY fieldname ASC][id][fieldname]</values>
            <valuetype>sql</valuetype>
        </param>
        <param>
            <id>style</id>
            <lang>
                <de>
                    <title>Style</title>
                    <description>Geben sie default.tpl um den standard style zu verwenden, oder ihr eigenes angepasstes tpl an.</description>
                </de>
                <en>
                    <title>Style</title>
                    <description>If you have a own tpl for this module, type in yourtplname.tpl</description>
                </en>
            </lang>
            <values>default.tpl</values>
            <valuetype>userinput</valuetype>
